

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book.id) %></td>
			<td><%= link_to "edit", edit_book_path(book.id) %></td>
			<td><%= link_to "destroy", book, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>



